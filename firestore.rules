rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 누구나 읽기 가능 (공개 열람 지원)
    match /{document=**} {
      allow read: if true;
    }

    // 로그인 사용자만 쓰기 가능
    match /qaItems/{itemId} {
      allow create, update, delete: if request.auth != null;
    }
    match /categories/{categoryId} {
      allow create, update, delete: if request.auth != null;
    }
    match /workspaces/{workspaceId} {
      allow create, update, delete: if request.auth != null;
    }
  }
}



